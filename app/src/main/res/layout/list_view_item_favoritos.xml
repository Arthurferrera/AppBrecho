<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:stateListAnimator="@drawable/button_style_custom"
        app:cardBackgroundColor="@color/colorCinza2"
        app:cardCornerRadius="7dp"
        app:cardElevation="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_favorito"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:background="@android:color/white"
                android:elevation="20dp"
                android:src="@mipmap/ic_launcher_round" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="150dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lbl_titulo_favorito"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:paddingLeft="7dp"
                    android:textAlignment="center"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    android:text="Estado"
                    android:textAlignment="gravity"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/lbl_status_roupa_favorito"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:textAlignment="center"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:gravity="bottom|left"
                    android:paddingLeft="10dp"
                    android:text="Cor"
                    android:textAlignment="gravity"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/lbl_cor_favorito"
                    android:layout_width="38dp"
                    android:layout_height="39dp"
                    android:layout_marginLeft="90dp"
                    android:background="@drawable/bg_cor" />

                <ImageView
                    android:id="@+id/img_favorito_like"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="bottom|right"
                    android:src="@drawable/ic_favoritos" />

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>